<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bck"
    android:gravity="center_horizontal"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/topbar"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="245dip"
            android:background="@null"
            android:src="@drawable/settings" />
    </LinearLayout>

    <ImageView
        android:id="@+id/lbl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/testcompleted"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dip"/>
    
  <ScrollView 
      android:layout_width="wrap_content"
      android:layout_height="275dip"
      android:layout_gravity="center_horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/summaryinfo"
        android:orientation="vertical" >

        <TextView
                android:id="@+id/lblAvgPulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dip"
                android:layout_marginTop="55dip"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="25px" />
            
            <TextView
                android:id="@+id/lblAvgECG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dip"
                android:paddingTop="15dip"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="25px" />
            
            <TextView
                android:id="@+id/lblAvgBloodPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dip"
                android:paddingTop="17dip"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="25px" />
            
            <TextView
                android:id="@+id/lblAvgAcceleration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dip"
                android:paddingTop="17dip"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="25px" />
            
            <TextView
                android:id="@+id/lblTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dip"
                android:paddingTop="20dip"
                android:text="@string/zero"
                android:textColor="@color/black"
                android:textSize="25px" />
            
            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dip"
                android:paddingTop="19dip"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="25px" />
            
            <TextView
                android:id="@+id/lblPostLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dip"
                android:paddingTop="18dip"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="25px" />
        
    </LinearLayout>
</ScrollView>

    <ImageButton
        android:id="@+id/btnRestartTest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:src="@drawable/restarttest" />

    <ImageButton
        android:id="@+id/btnSyncResults"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@null"
        android:src="@drawable/syncresults" />

</LinearLayout>
